{
    "defaultSeverity": "warning",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": [true, 150],
        "trailing-comma": false,
        "ter-indent": [
            true, 
            2,
            {
                "SwitchCase": 1
            }
        ],
        "variable-name": false,
        "strict-boolean-expressions": false,
        "align": false,
        "import-name": false,
        "function-name": false
    },
    "rulesDirectory": []
}